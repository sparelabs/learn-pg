{
  "name": "learn-pg",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "npm install && tsx scripts/setup.ts",
    "dev": "tsx scripts/dev.ts",
    "reset-progress": "tsx scripts/reset-progress.ts",
    "reset-db": "tsx scripts/reset-db.ts",
    "build": "npm run build --workspaces",
    "start": "npm run dev",
    "typecheck": "npm run typecheck --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
